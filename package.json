		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.10.0",
		"@typescript-eslint/parser": "^7.10.0",
		"class-validator": "^0.14.1",
		"commitlint": "^19.3.0",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
