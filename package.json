		"@types/node": "^20.8.7",
		"@types/supertest": "^2.0.15",
		"@typescript-eslint/eslint-plugin": "^6.8.0",
		"@typescript-eslint/parser": "^6.8.0",
		"class-validator": "^0.14.0",
		"commitlint": "^17.8.0",
		"eslint": "^8.51.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.0.0",
